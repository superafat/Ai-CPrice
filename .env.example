# OCR 數學題目解析系統環境配置

# 基本設定
DEBUG=false
SECRET_KEY=your-secret-key-change-in-production
HOST=0.0.0.0
PORT=8000

# 資料庫與快取
REDIS_URL=redis://localhost:6379

# CORS 設定
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# OCR 引擎開關
PADDLEOCR_ENABLED=true
TESSERACT_ENABLED=true
DOCTR_ENABLED=true
PIX2TEX_ENABLED=true
TROCR_ENABLED=true
MATHPIX_ENABLED=true

# Mathpix API 設定（兜底引擎）
MATHPIX_APP_ID=your_mathpix_app_id
MATHPIX_APP_KEY=your_mathpix_app_key
MATHPIX_DAILY_LIMIT=100
MATHPIX_ACCOUNT_LIMIT=1000

# 影像處理參數
MIN_WIDTH_TEXT=1200
MIN_WIDTH_FORMULA=800
MAX_FILE_SIZE=52428800
SUPPORTED_FORMATS=jpg,jpeg,png,webp,pdf

# OCR 置信度閾值
TEXT_CONFIDENCE_THRESHOLD=0.8
FORMULA_CONFIDENCE_THRESHOLD=0.7

# 重試策略
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=2
TASK_TIMEOUT_SECONDS=300

# 並發控制
MAX_CONCURRENT_TASKS=10
MAX_UPLOAD_CONCURRENT=5

# 匯出設定
DEFAULT_PROBLEM_FONT_SIZE=11
DEFAULT_SOLUTION_FONT_SIZE=9
MIN_FONT_SIZE=8
MAX_FONT_SIZE=16
MAX_IMAGE_WIDTH_CM=14.0

# 日誌設定
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 效能優化
PADDLEOCR_USE_GPU=false
TORCH_NUM_THREADS=2
OPENCV_NUM_THREADS=2

# 儲存路徑
UPLOAD_DIR=uploads
PROCESSED_DIR=processed
OUTPUT_DIR=outputs
TEMP_DIR=temp_export

# 清理設定
AUTO_CLEANUP_DAYS=7
MAX_DISK_USAGE_GB=50